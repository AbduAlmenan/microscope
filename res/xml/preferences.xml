<?xml version="1.0" encoding="utf-8"?>

<PreferenceScreen
        xmlns:android="http://schemas.android.com/apk/res/android">
        
    	<ListPreference
    	        android:key="platform"
        	    android:defaultValue="@string/summary_platform_preferences"
            	android:title="@string/title_platform_preferences"
            	android:summary="@string/summary_platform_preferences"
            	android:entries="@array/platform_entries"
            	android:entryValues="@array/platform_values"
            	android:dialogTitle="@string/dialog_title_platform_preference" />

	    <PreferenceScreen
	        	android:key="installdrv"
                android:title="@string/title_installdrv_preference"
                android:summary="@string/summary_installdrv_preference" />

	    <PreferenceScreen
	        	android:key="removedrv"
                android:title="@string/title_removedrv_preference"
                android:summary="@string/summary_removedrv_preference" />
    
	    <EditTextPreference
    	        android:key="devpath"
        	    android:defaultValue="@string/summary_devpath_preferences"
            	android:title="@string/title_devpath_preferences"
            	android:summary="@string/summary_devpath_preferences"
            	android:dialogTitle="@string/dialog_title_devpath_preference" />
       	
	    <EditTextPreference
    	        android:key="imgpath"
        	    android:defaultValue="@string/summary_imgpath_preferences"
            	android:title="@string/title_imgpath_preferences"
            	android:summary="@string/summary_imgpath_preferences"
            	android:dialogTitle="@string/dialog_title_imgpath_preference" />

</PreferenceScreen>
